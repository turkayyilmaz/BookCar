@model CreateCarDto
@{
	ViewData["Title"] = "CreateCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				

				<h4 class="card-title">Creating a New Car</h4>
				<p class="card-subtitle mb-4">Fill the car details in areas then click save button.</p>

				
				<form method="post">
					<div class="form-group">
						<label for="exampleInputBrand">Brand</label>
						
						@Html.DropDownListFor(x => x.BrandID, (IEnumerable<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label for="exampleInputModel">Model</label>
						<input type="text" class="form-control" asp-for="Model" id="exampleInputModel" placeholder="Insert a Model...">
					</div>
					<div class="form-group">
						<label for="exampleInputCover">Cover Image Url</label>
						<input type="text" class="form-control" asp-for="CoverImageUrl" id="exampleInputCover" placeholder="Insert a Cover Image Urls...">
					</div>
					<div class="form-group">
						<label for="exampleInputKm">KM</label>
						<input type="text" class="form-control" asp-for="Km" id="exampleInputKm" placeholder="Insert a Km...">
					</div>
					<div class="form-group">
						<label for="exampleInputTransmission">Transmission</label>
						<input type="text" class="form-control" asp-for="Transmission" id="exampleInputTransmission" placeholder="Insert a Transmission...">
					</div>
					<div class="form-group">
						<label for="exampleInputSeat">Seats</label>
						<input type="number" class="form-control" asp-for="Seat" id="exampleInputSeat" placeholder="Insert a Seat...">
					</div>
					<div class="form-group">
						<label for="exampleInputLuggage">Luggage</label>
						<input type="number" class="form-control" asp-for="Luggage" id="exampleInputLuggage" placeholder="Insert a Luggage...">
					</div>
					<div class="form-group">
						<label for="exampleInputFuel">Fuel</label>
						<input type="text" class="form-control" asp-for="Fuel" id="exampleInputFuel" placeholder="Insert a Fuel...">
					</div>
					<div class="form-group">
						<label for="exampleInputBigImageUrl">Big Image Cover Url</label>
						<input type="text" class="form-control" asp-for="BigImageUrl" id="exampleInputBigImageUrl" placeholder="Insert a Big Image Url...">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
				</form>

			</div> <!-- end card-body-->
		</div>
	</div>
</div>