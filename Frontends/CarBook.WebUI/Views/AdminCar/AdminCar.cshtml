@model List<ResultCarWithBrandDto>
@{
	ViewData["Title"] = "AdminCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Car List</h4>
						<p class="card-subtitle mb-4">
							You can perform processes to create, list, update, delete, and search for cars.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Brand</th>
										<th>Model</th>
										<th>Transmission</th>
										<th>KM</th>
										<th>Delete</th>
										<th>Update</th>
										<th>Details</th>
										<th>Set a Feature</th>
										<th>View in Web Site</th>
										<th>Price Detail</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th scope="row">@count</th>
											<td>@item.BrandName</td>
											<td>@item.Model</td>
											<td>@item.Transmission</td>
											<td>@item.Km</td>
											<td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-outline-danger">Delete</a></td>
											<td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-outline-primary">Update</a></td>
											<td><a href="/Admin/AdminCarFeatureDetail/Index/@item.CarID" class="btn btn-outline-dark">Details</a></td>
											<td><a href="/Admin/AdminCarFeatureDetail/CreateFeatureByCarId" class="btn btn-outline-info">Set a Feature</a></td>
											<td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-warning">View in Web Site</a></td>
											<td><a href="/CarList/CarDetail/@item.CarID" class="btn btn-outline-success">Price Detail</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/AdminCar/CreateCar" class="btn btn-outline-success">Create Car</a>
						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>

	</div> <!-- container-fluid -->
</div>

											