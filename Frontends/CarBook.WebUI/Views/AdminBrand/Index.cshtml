@model List<ResultBrandDto>
@{
	ViewData["Title"] = "AdminCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Car Brand List</h4>
						<p class="card-subtitle mb-4">
							You can perform any process about brands.
						</p>

						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Brand</th>
										<th>Delete</th>
										<th>The Cars of Brand</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										count++;

										<tr>
											<th scope="row">@count</th>
											<td>@item.name</td>
											<td><a asp-asp-controller="AdminBrand" asp-action="RemoveBrand" asp-route-id="@item.brandID" class="btn btn-outline-danger">Delete</a></td>
											<td><a href="/AdminBrand/UpdateBrand/@item.brandID" class="btn btn-outline-primary">Update</a></td>
											<td><a href="/AdminBrand/UpdateBrand/@item.brandID" class="btn btn-outline-primary">The Cars of Brand</a></td>

										</tr>
									}

								</tbody>
							</table>
							<a href="/AdminBrand/CreateBrand" class="btn btn-outline-success">Create a New Brand</a>

						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>

	</div> <!-- container-fluid -->
</div>

