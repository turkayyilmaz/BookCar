@model UpdateFooterAdressDto

@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Address Information Update Page</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressID" />
                            <div class="form-group">
                                <label for="exampleInputAddress">Addres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Phone</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" >
                            </div>
                            <div class="form-group">
                                <label for="exampleInputMail">E-Mail</label>
                                <input type="email" class="form-control" id="exampleInputMail" asp-for="Email" >
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

