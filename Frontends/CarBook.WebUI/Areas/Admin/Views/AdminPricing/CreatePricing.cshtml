@model CreatePricingDto

@{
	ViewData["Title"] = "CreatePricing";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">
							New Payment Period Entry
						</h4>
						<p class="card-subtitle mb-4">
							You can enter data into the payment period field from the panel below.
						</p>
						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Paying Period Title</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter the Payment Period Name (Daily, Weekly, Monthly, etc.)
">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Create</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


