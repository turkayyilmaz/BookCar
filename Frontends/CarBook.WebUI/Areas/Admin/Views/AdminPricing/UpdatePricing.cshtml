@model UpdatePricingDto

@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Paying Periot Update Page</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the data in the payment period field from the panel below.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingID" />
                            <div class="form-group">
                                <label for="exampleInputName">Paying Periot Title</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Enter the Payment Period Name (Daily, Weekly, Monthly, etc.)">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



