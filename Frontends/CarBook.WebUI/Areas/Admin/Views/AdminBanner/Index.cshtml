@model List<ResultBannerDto>
@{
	ViewData["Title"] = "AdminCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Car Banner List</h4>
						<p class="card-subtitle mb-4">
							You can perform any process about banner.
						</p>

						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>Title</th>
										<th>Description</th>
										<th>Video Url</th>
										<th>Video Description</th>
										<th>Delete</th>
										<th>Update</th>
										<th>Watch Video</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.VideoUrl</td>
											<td>@item.VideoDescription</td>
											<td><a asp-area="Admin" asp-controller="AdminBanner" asp-action="RemoveBanner" asp-route-id="@item.BannerId" class="btn btn-outline-danger">Delete</a></td>
											<td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-primary">Update</a></td>
											<td><a href="/Admin/AdminBanner/YoutubeBanner/@item.BannerId" class="btn btn-outline-primary">Watch on YouTube</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminBanner/CreateBanner" class="btn btn-outline-success">Create a New Banner</a>

						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>

	</div> <!-- container-fluid -->
</div>

