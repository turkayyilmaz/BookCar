@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Insert a Social Media</h4>
                        <p class="card-subtitle mb-4">
                            You can perform to create process.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Social Media Title</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Icon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

