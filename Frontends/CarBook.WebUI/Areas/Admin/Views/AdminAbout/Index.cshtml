@model List<ResultAboutDto>
@{
	ViewData["Title"] = "AdminCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Car About</h4>
						<p class="card-subtitle mb-4">
							Please insert one about information for responsive condition.
						</p>

						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>Title</th>
										<th>Description</th>
										<th>Image</th>
										<th>Delete</th>
										<th>Update</th>
									</tr>
								</thead>
								<tbody>

									@foreach (var item in Model)
									{
										<tr>
											<td>@item.title</td>
											<td>@item.description</td>
											<td>@item.imageUrl</td>
											<td><a asp-area="Admin" asp-controller="AdminAbout" asp-action="RemoveAbout" asp-route-id="@item.aboutID" class="btn btn-outline-danger">Delete</a></td>
											<td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutID" class="btn btn-outline-primary">Update</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminAbout/CreateAbout" class="btn btn-outline-success">Create a New About</a>

						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>

	</div> <!-- container-fluid -->
</div>

