@model UpdateAboutDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Banner</h4>
                <p class="card-subtitle mb-4">Insert a Banner information.</p>
                <form method="post">
                    <input type="hidden" asp-for="aboutID" />
                    <div class="form-group">
                        <label for="exampleInputBrand">About Title</label>
                        <input type="text" class="form-control" asp-for="title" id="exampleInputBrand" placeholder="Insert a About...">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputBrand">About Description</label>
                        <textarea rows="5" class="form-control" asp-for="description" id="exampleInputBrand" placeholder="Insert a About Description..."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputBrand">Image</label>
                        <input type="text" class="form-control" asp-for="imageUrl" id="exampleInputBrand" placeholder="Insert a Image...">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>